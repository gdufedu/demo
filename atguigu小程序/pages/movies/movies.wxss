/* pages/movices/movices.wxss */
.moviesContainer {
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
}
.movieImg {
    width: 128rpx;
    height: 128rpx;
}
.movie_detail {
    display: flex;
    flex-direction: column;
    width: 70%;
    margin-left: 20rpx;
}
.movie_name {
    font-size: 32rpx;
    color: #000;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 70%;
}
.movie_year {
    font-size: 28rpx;
    color: #666;
    margin: 8rpx 0;
}
.movie_director {
    font-size: 30rpx;
    color: #333;
}
.movie_rating {
    font-size: 40rpx;
    color: red;
    font-weight: bold;
}